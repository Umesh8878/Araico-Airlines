package com.AraicoAirlines.dto;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

@Entity
@Table(name = "traveller_details")
public class TravellerDetails {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "traveller_id")
    private int id;
    
    @Column(name = "name", length=25, nullable=false)
    private String name;
    
    @Column(name = "age", nullable=false)
    private int age;
    
    @Column(name = "mobileNumber", nullable=false)
    private String mobileNumber;
    
    @Column(name = "email", length=25, nullable=false)
    private String email;
    
    @Column(name = "category", nullable=false)
    private String bookingCategory;

    public TravellerDetails() {
        // Default constructor required by JPA
    }

    public TravellerDetails(String name, int age, String mobileNumber, String email, String bookingCategory) {
        this.name = name;
        this.age = age;
        this.mobileNumber = mobileNumber;
        this.email = email;
        this.bookingCategory = bookingCategory;
    }

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getMobileNumber() {
		return mobileNumber;
	}

	public void setMobileNumber(String mobileNumber) {
		this.mobileNumber = mobileNumber;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public String getBookingCategory() {
		return bookingCategory;
	}

	public void setBookingCategory(String bookingCategory) {
		this.bookingCategory = bookingCategory;
	}

	@Override
	public String toString() {
		return "TravellerDetails [id=" + id + ", name=" + name + ", age=" + age + ", mobileNumber=" + mobileNumber
				+ ", email=" + email + ", bookingCategory=" + bookingCategory + "]";
	}

}
