package com.AraicoAirlines.services;

import java.time.LocalDate;
import java.time.LocalDateTime;
import java.util.List;

import com.AraicoAirlines.dao.FlightDAO;
import com.AraicoAirlines.dto.Flight;
//import com.AraicoAirlines.dto.TravellerDetails;
import com.AraicoAirlines.exceptions.SomethingWentWrongException;

public class FlightService {
    private final FlightDAO flightDAO;

    public FlightService(FlightDAO flightDAO) {
        this.flightDAO = flightDAO;
    }

    public void addFlight(Flight flight) throws SomethingWentWrongException {
        try {
            flightDAO.addFlight(flight);
        } catch (SomethingWentWrongException e) {
            throw e;
        }
    }


    public void updateFlight(Flight flight) throws SomethingWentWrongException {
        try {
            flightDAO.updateFlight(flight);
        } catch (Exception e) {
            throw new SomethingWentWrongException("Error updating flight");
        }
    }

    public void removeFlight(String flightNumber) throws SomethingWentWrongException {
        try {
            flightDAO.removeFlight(flightNumber);
        } catch (Exception e) {
            throw new SomethingWentWrongException("Error removing flight");
        }
    }
    
    public List<Flight> getAllFlights() throws SomethingWentWrongException {
        try {
            return flightDAO.getAllFlights();
        } catch (Exception e) {
            throw new SomethingWentWrongException("Error getting all flights");
        }
    }

    public List<Flight> getAvailableFlights(String departureCity, String destinationCity, LocalDate journeyDate,
            int numTravelers) throws SomethingWentWrongException {
			try {
				return flightDAO.getAvailableFlights(departureCity, destinationCity, journeyDate, numTravelers);
			} catch (Exception e) {
				throw new SomethingWentWrongException("Error getting available flights");
			}
    }

    public Flight getFlightByNumber(String flightNumber) {
        try {
            return flightDAO.getFlightByNumber(flightNumber);
        } catch (Exception e) {
            return null;
        }
    }
    
    public List<Flight> filterFlightsByDepartureCity(String departureCity) {
        return flightDAO.filterFlightsByDepartureCity(departureCity);
    }
    
    public List<Flight> filterFlightsByDestinationCity(String destinationCity) {
        return flightDAO.filterFlightsByDestinationCity(destinationCity);
    }
    
    public List<Flight> filterFlightsByDepartureDate(LocalDate departureDate) {
        return flightDAO.filterFlightsByDepartureDate(departureDate);
    }

    public List<Flight> filterFlightsByDestinationDate(LocalDate destinationDate) {
        return flightDAO.filterFlightsByDestinationDate(destinationDate);
    }
    
    public List<Flight> filterFlightsByPriceRange(double minPrice, double maxPrice) {
        return flightDAO.filterFlightsByPriceRange(minPrice, maxPrice);
    }
    
    public List<Flight> filterFlightsByAll(String departureCity, String destinationCity, LocalDate departureDate, LocalDate destinationDate, double minPrice, double maxPrice) {
        return flightDAO.filterFlightsByAll(departureCity, destinationCity, departureDate, destinationDate, minPrice, maxPrice);
    }
    
    public List<Flight> getAllFlights() {
        return flightDAO.getAllFlights();
    }

}
