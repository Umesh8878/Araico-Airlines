package com.AraicoAirlines.services;

import java.time.LocalDate;

import com.AraicoAirlines.dao.CustomerDAO;
import com.AraicoAirlines.dao.CustomerDAOImpl;
import com.AraicoAirlines.dto.Customer;
import com.AraicoAirlines.exceptions.SomethingWentWrongException;

public class CustomerService {
    private final CustomerDAO customerDAO;

    public CustomerService() {
        customerDAO = new CustomerDAOImpl();
    }

    public void registerCustomer(String name, LocalDate dob, String gender, String email, String mobileNumber, String password)
            throws SomethingWentWrongException {
        Customer customer = new Customer(name, dob, gender, email, mobileNumber, password);
        customerDAO.registerCustomer(customer);
    }

    public Customer customerLogin(String email, String password) throws SomethingWentWrongException {
        return customerDAO.customerLogin(email, password);
    }
}
